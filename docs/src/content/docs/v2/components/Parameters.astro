---
import { Badge, Code } from '@astrojs/starlight/components';
import Type from './Type.astro';
import TypeCode from './TypeCode.astro';
import DescriptionList from './DescriptionList.astro';

type Props = {
  parameters: {
    name: string;
    type: string;
    defaultValue?: string;
    description?: (string | ((...args: any[]) => any))[];
  }[];
};

const { parameters } = Astro.props;
---

<h3>Parameters</h3>
<ol>
  {
    parameters.map(({ name, type, description, defaultValue }) => (
      <li>
        <code>{name}</code>
        <TypeCode name={name} type={type} />

        {defaultValue !== undefined && (
          <Code lang="ts" code=`/* default value */\nconst ${name} = ${defaultValue};` />
        )}
         {description && 
         <DescriptionList list={description}/>
         }
      </li>
    ))
  }
</ol>
