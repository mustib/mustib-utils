{
  "name": "@mustib/utils",
  "version": "2.0.0",
  "description": "a lightweight npm library that provides a collection of commonly used utilities. Whether youâ€™re working on web applications, APIs, or backend services, these tools simplify repetitive tasks and enhance productivity",
  "type": "module",
  "license": "MIT",
  "author": "Muhammad Mustafa",
  "main": "dist/common.js",
  "types": "dist/common.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/common.d.ts",
        "default": "./dist/common.js"
      },
      "require": {
        "types": "./dist/cjs/common.d.ts",
        "default": "./dist/cjs/common.js"
      }
    },
    "./node": {
      "import": {
        "types": "./dist/node.d.ts",
        "default": "./dist/node.js"
      },
      "require": {
        "types": "./dist/cjs/node.d.ts",
        "default": "./dist/cjs/node.js"
      }
    },
    "./browser": {
      "import": {
        "types": "./dist/browser.d.ts",
        "default": "./dist/browser.js"
      },
      "require": {
        "types": "./dist/cjs/browser.d.ts",
        "default": "./dist/cjs/browser.js"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mustib/mustib-utils.git"
  },
  "scripts": {
    "lint": "eslint . --ext .js,.ts",
    "prebuild": "npm run lint && rimraf ./dist",
    "build": "rollup -c rollup.config.js",
    "prepublishOnly": "npm run build",
    "postbuild": "node ./postBuildScript.js",
    "test": "vitest run",
    "test-watch": "vitest watch",
    "docs-dev": "cd ./docs && npm run dev"
  },
  "files": [
    "./dist",
    "./package.json",
    "./Readme.md"
  ],
  "keywords": [
    "util",
    "module",
    "helper",
    "function",
    "node"
  ],
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/node": "^20.12.13",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "rollup": "^4.24.0",
    "rollup-plugin-dts": "^6.1.1",
    "tslib": "^2.7.0",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5",
    "vitest": "^2.1.8"
  }
}
